<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ligreto PUBLIC "ligreto.dtd" "ligreto.dtd">
<ligreto>
	<data-sources>
		<data-source name="Source1">
			<driver value="org.apache.derby.jdbc.EmbeddedDriver"/>
			<uri value="jdbc:derby:db1"/>
		</data-source>
		<data-source name="Source2">
			<driver value="org.apache.derby.jdbc.EmbeddedDriver"/>
			<uri value="jdbc:derby:db2"/>
		</data-source>
	</data-sources>
	<report name="Simple Report" options="autoFilter, autoSize,headerStyle" locale="en_US">
		<output file="joinreport.xlsx"/>
		<data>
			<join on="1" target="full!B2" type="full" header="true" highlight="true" locale="en">
				<sql data-source="Source1">select * from join_table1</sql>
				<sql data-source="Source2">select * from join_table2</sql>
			</join>
			<join target="left!B2" type="left" header="true" locale="en_GB">
				<sql data-source="Source1" on="1">select * from join_table1</sql>
				<sql data-source="Source2" on="1">select * from join_table2</sql>
			</join>
			<join target="right!B2" type="right" header="true" locale="cs_CZ">
				<sql data-source="Source1" on="1">select * from join_table1</sql>
				<sql data-source="Source2" on="1">select * from join_table2</sql>
			</join>
			<join target="inner!B2" type="inner" header="true" locale="sk">
				<sql data-source="Source1" on="1">select * from join_table1</sql>
				<sql data-source="Source2" on="1">select * from join_table2</sql>
			</join>
			<join on="1" target="inner!B20" type="full" header="true" highlight="true" locale="sk_SK">
				<sql data-source="Source1">select * from join_table1</sql>
				<sql data-source="Source1">select * from join_table1</sql>
			</join>
			<join target="interlaced!B2" type="full" header="true" interlaced="true">
				<sql data-source="Source1" on="1">select * from join_table1</sql>
				<sql data-source="Source2" on="1">select * from join_table2</sql>
			</join>
			<join target="diffs!B2" type="full" header="true" diffs="true" highlight="true">
				<sql data-source="Source1" on="1">select * from join_table1</sql>
				<sql data-source="Source2" on="1">select * from join_table2</sql>
			</join>
			<join target="append!B2" type="inner" header="true" diffs="true" highlight="true" hlColor="#20d020">
				<sql data-source="Source1" on="1">select * from join_table1</sql>
				<sql data-source="Source2" on="1">select * from join_table2</sql>
			</join>
			<join target="append!B2" type="inner" append="true" diffs="true" highlight="true" hlColor="#2020d0">
				<sql data-source="Source1" on="1">select * from join_table1</sql>
				<sql data-source="Source2" on="1">select * from join_table2</sql>
			</join>
			<join target="multicols!A1" type="full" header="true" diffs="true" highlight="true" hlColor="#2020d0">
				<sql data-source="Source1" on="1,2,3">select id, 'ABC' aco, cast('ABCD' as char(6)) bco, first_name, last_name, age from join_table1</sql>
				<sql data-source="Source2" on="1,2,3">select id, 'ABC' aco, 'ABCD' bco, first_name, last_name, age from join_table2</sql>
			</join>
		</data>
	</report>
	<report name="Simple Report" type="excel.stream" options="autoFilter, autoSize,headerStyle" locale="en_US">
		<output file="streamjoinreport.xlsx"/>
		<data>
			<join on="1" target="full!B2" type="full" header="true" highlight="true" locale="en">
				<sql data-source="Source1">select * from join_table1</sql>
				<sql data-source="Source2">select * from join_table2</sql>
			</join>
		</data>
	</report>
</ligreto>